{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "blocks": {
      "type": "object",
      "properties": {
        "*": {
          "type": "object",
          "properties": {
            "force": {
              "type": "boolean"
            },
            "optional": {
              "type": "boolean"
            },
            "weighting": {
              "type": "string",
              "enum": ["candidates-shallow", "candidates-deep", "keyword"]
            },
            "num": {
              "type": "string"
            },
            "candidates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "candidates"
          ]
        }
      }
    },
    "groups": {
      "type": "object",
      "properties": {
        "*": {
          "type": "object",
          "properties": {
            "members": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "members"
          ]
        }
      }
    },
    "exclusions": {
      "type": "object",
      "properties": {
        "*": {
          "type": "object",
          "properties": {
            "members": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "weights": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "required": [
            "members"
          ]
        }
      }
    }
  },
  "required": [
    "blocks"
  ]
}